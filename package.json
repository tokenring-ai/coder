{
 "name": "@tokenring-ai/coder",
 "description": "TokenRing Coder Application",
 "version": "0.1.4",
 "bin": {
  "tr-coder": "dist/tr-coder.js"
 },
 "dependencies": {
  "@inquirer/prompts": "^7.8.3",
  "@tokenring-ai/audio": "0.1.0",
