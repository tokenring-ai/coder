  "@tokenring-ai/cli": "0.1.0",
  "@tokenring-ai/code-watch": "0.1.0",
  "@tokenring-ai/codebase": "0.1.0",
  "@tokenring-ai/database": "0.1.0",
  "@tokenring-ai/docker": "0.1.0",
  "@tokenring-ai/feedback": "0.1.0",
  "@tokenring-ai/file-index": "0.1.0",
  "@tokenring-ai/filesystem": "0.1.0",
  "@tokenring-ai/git": "0.1.0",
  "@tokenring-ai/javascript": "0.1.0",
  "@tokenring-ai/kubernetes": "0.1.0",
  "@tokenring-ai/linux-audio": "0.1.0",
  "@tokenring-ai/local-filesystem": "0.1.0",
  "@tokenring-ai/mcp": "0.1.0",
  "@tokenring-ai/memory": "0.1.0",
  "@tokenring-ai/mysql": "0.1.0",
  "@tokenring-ai/queue": "0.1.0",
  "@tokenring-ai/s3": "0.1.0",
  "@tokenring-ai/sandbox": "0.1.0",
  "@tokenring-ai/scraperapi": "0.1.0",
  "@tokenring-ai/serper": "0.1.0",
  "@tokenring-ai/sqlite-storage": "0.1.0",
  "@tokenring-ai/tasks": "0.1.0",
  "@tokenring-ai/testing": "0.1.0",
  "@tokenring-ai/websearch": "0.1.0"
 },
 "devDependencies": {
  "@biomejs/biome": "^2.2.0",
  "husky": "^9.1.7",
  "jsdom": "^26.1.0",
  "node-gyp": "^11.3.0",
  "trufflehog": "^0.0.5",
  "ts": "^0.2.2",
  "vitest": "^3.2.4"
 },
 "license": "MIT",
 "scripts": {
  "xpreinstall": "test -f pkg/ai-client/package.json || echo 'Updating git submodules...' && git submodule update --init --recursive",
  "build-container": "docker build -t tokenring-ai/coder:latest -f docker/Dockerfile .",
  "coder-container": "docker run -ti --net host -v ./:/repo:rw tokenring-ai/coder:latest",
  "build": "tsc",
  "code-debug": "bun --inspect src/tr-coder.js --source ./",
  "coder": "bun src/tr-coder.js --source ./",
  "typecheck": "tsc -p tsconfig.tson --noEmit",
  "build:ts": "tsc -p tsconfig.tson",
  "test": "vitest run",
  "prepare": "husky",
  "biome": "biome format --fix",
  "update-all-dependencies-latest": "git submodule foreach npx npm-check-updates -u"
 },
 "type": "module",
 "workspaces": [
  "pkg/*"
 ]
}
